.page-container {
  background-color: #fff;
}

.content-wrap {
  padding-bottom: 100px;
  background-color: #fff;
}

.add-btn {
  position: fixed;
  background-color: #FD0000;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 60px;
  bottom: 20px;
  left: 50%;
  margin-left: -30px;
  /* right: 20px; */
}

.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}

.list-item .cover-wrap {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  border: 1px solid #ddd;
}
.cover-wrap image {
  width: 100%;
  height: 100%;
}
.cover-wrap icon {
  font-size: 100rpx;
}

.info-wrap {
  flex: 1;
  margin-right: 5px;
}

.info-basic {
  display: flex;
  align-items: center;
}

.info-basic .date-range {
  flex: 1;
  margin-left: 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #aaa;
}

.info-description {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #FD0000;
  font-size: 13px;
}

.info-address {
  color: #aaa;
  font-size: 12px;
}
